        <option value="olhos1">Olhos 1</option>
        <option value="olhos2">Olhos 2</option>
        <option value="olhos3">Olhos 3</option>
    </select>

    <button onclick="trocarCaracteristicas()">Trocar Características</button>

    <script>
        // Função para trocar as características do personagem
        function trocarCaracteristicas() {
            // Obtenha os valores selecionados
            var cabeloSelecionado = document.getElementById('cabelo').value;
            var corpoSelecionado = document.getElementById('corpo').value;
            var olhosSelecionados = document.getElementById('olhos').value;

            // Atualize as características do personagem (você pode substituir isso por sua lógica de aplicação)
            console.log("Cabelo selecionado: " + cabeloSelecionado);
            console.log("Corpo selecionado: " + corpoSelecionado);
            console.log("Olhos selecionados: " + olhosSelecionados);
        }
        </script>
</body>
<script src="./js/personagem.js"></script>
</html>