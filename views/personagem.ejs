    <link rel="icon" href="./imagens/logoroxa.png">
</head>
<body>
    <label for="cabelo">Cabelo:</label>
    <select id="cabelo">
        <option value="cabelo1">Cabelo 1</option>
        <option value="cabelo2">Cabelo 2</option>
        <option value="cabelo3">Cabelo 3</option>
    </select>

    <label for="corpo">Corpo:</label>
    <select id="corpo">
        <option value="corpo1">Corpo 1</option>
        <option value="corpo2">Corpo 2</option>
        <option value="corpo3">Corpo 3</option>
    </select>

    <label for="olhos">Olhos:</label>
